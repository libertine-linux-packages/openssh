init_sshd_start()
{
	if [ -f /var/run/sshd.pid ]; then
		return 0
	fi
	
	sshd -u0 "@"
}

init_sshd_stop()
{
	if [ ! -f /var/run/sshd.pid ]; then
		return 0
	fi
	kill SIGTERM "$(head -n 1 /var/run/sshd.pid)"
	rm -rf /var/run/sshd.pid
}

init_sshd_reload()
{
	if [ ! -f /var/run/sshd.pid ]; then
		return 1
	fi
	kill SIGHUP "$(head -n 1 /var/run/sshd.pid)"
}

init_sshd_main()
{
	. /usr/lib/rc.functions
	
	if [ "$#" -eq 0 ]; then
		local action='status'
	else
		local action="$1"
		shift 1
	fi
	
	case "$action" in
		
		start)
			init_sshd_start "$@"
		;;
		
		stop)
			init_sshd_stop
		;;
		
		restart)
			init_sshd_stop
			init_sshd_start "$@"
		;;
		
		reload)
			init_sshd_reload
		;;
		
	esac
}

init_sshd_main "$@"
