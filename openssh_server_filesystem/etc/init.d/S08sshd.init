init_sshd_start()
{
	if [ -f "$pidFilePath" ]; then
		return 0
	fi
	
	taskset 0x00000001 /usr/sbin/sshd -u0 "$@" &
}

init_sshd_stop()
{
	if [ ! -f "$pidFilePath" ]; then
		return 0
	fi
	kill SIGTERM "$(head -n 1 "$pidFilePath")"
	rm -rf "$pidFilePath"
}

init_sshd_reload()
{
	if [ ! -f "$pidFilePath" ]; then
		return 1
	fi
	kill SIGHUP "$(head -n 1 "$pidFilePath")"
}

init_sshd_main()
{
	if [ "$#" -eq 0 ]; then
		local action='status'
	else
		local action="$1"
		shift 1
	fi
	
	local pidFilePath='/var/run/sshd.pid'
	
	case "$action" in
		
		start)
			init_sshd_start "$@"
		;;
		
		stop)
			init_sshd_stop
		;;
		
		restart)
			init_sshd_stop
			init_sshd_start "$@"
		;;
		
		reload)
			init_sshd_reload
		;;
		
	esac
}

init_sshd_main "$@"
